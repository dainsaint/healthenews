

<div class="charts">


  <div class="chart">
    <h4>{{ Representation.Group }}</h4>
    <canvas id="chart-{{ Representation.Group | slug }}-race" width="100" height="100"></canvas>
  </div>

  <!-- <div class="chart">
    <canvas id="chart-{{ Representation.Group | slug }}-gender" width="100" height="100"></canvas>
  </div> -->
</div>

<script>

var ctx = document.getElementById("chart-{{ Representation.Group | slug }}-race").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ['White', 'Black', 'Latinx', 'Asian', 'Native'],
        datasets: [{
            data: [{{ Representation.White }}, {{ Representation.Black }}, {{ Representation.Latinx }}, {{ Representation.Asian }}, {{ Representation.Native }} ],
            backgroundColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ]
        }]
    }
});

var ctx2 = document.getElementById("chart-{{ Representation.Group | slug }}-gender").getContext('2d');
var myChart2 = new Chart(ctx2, {
    type: 'pie',
    data: {
        labels: ['Men', 'Women'],
        datasets: [{
            data: [{{ Representation.Men }}, {{ Representation.Women }}],
            backgroundColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ]
        }]
    }
});
</script>
